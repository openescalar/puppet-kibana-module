#user  nobody;
worker_processes  1;

#error_log  logs/error.log;
#error_log  logs/error.log  notice;
#error_log  logs/error.log  info;

#pid        logs/nginx.pid;

daemon off;

events {
    worker_connections  1024;
}


http {
    include       mime.types;
    default_type  application/octet-stream;

    #log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
    #                  '$status $body_bytes_sent "$http_referer" '
    #                  '"$http_user_agent" "$http_x_forwarded_for"';

    sendfile        on;
    #tcp_nopush     on;

    #keepalive_timeout  0;
    keepalive_timeout  65;

    #gzip  on;

    server {
      listen *:80 ;
      server_name kibana;
      access_log /var/log/kibana/access.log;
      error_log  /var/log/kibana/error.log;
      location / {
        root /opt/kibana3/html;
        index index.html index.htm;
      }

      location ~ ^/_aliases$ {
        proxy_pass http://<%= @es_host %>:9200;
        proxy_read_timeout 90;
      }
      location ~ ^/.*/_search$ {
        proxy_pass http://<%= @es_host %>:9200;
        proxy_read_timeout 90;
      }
      location ~ ^/.*/_mapping$ {
        proxy_pass http://<%= @es_host %>:9200;
        proxy_read_timeout 90;
      }

      location ~ ^/kibana-int/dashboard/.*$ {
        proxy_pass http://<%= @es_host %>:9200;
        proxy_read_timeout 90;
      }

      location ~ ^/kibana-int/temp.*$ {
        proxy_pass http://<%= @es_host %>:9200;
        proxy_read_timeout 90;
      }
    }

    # HTTPS server
    
    server {
        listen       443;
      server_name kibana;

      access_log /var/log/kibana/ssl-access.log;
      error_log  /var/log/kibana/ssl-error.log;
      location / {
        root /opt/kibana3/html;
        index index.html index.htm;
      }
 
      location ~ ^/_aliases$ {
        proxy_pass http://<%= @es_host %>:9200;
        proxy_read_timeout 90;
      }
      location ~ ^/.*/_search$ {
        proxy_pass http://<%= @es_host %>:9200;
        proxy_read_timeout 90;
      }
      location ~ ^/.*/_mapping$ {
        proxy_pass http://<%= @es_host %>:9200;
        proxy_read_timeout 90;
      }

      location ~ ^/kibana-int/dashboard/.*$ {
        proxy_pass http://<%= @es_host %>:9200;
        proxy_read_timeout 90;
      }

      location ~ ^/kibana-int/temp.*$ {
        proxy_pass http://<%= @es_host %>:9200;
        proxy_read_timeout 90;
      }

        ssl                  on;
        ssl_certificate      /opt/kibana3/embedded/ssl/certs/server.crt;
        ssl_certificate_key  /opt/kibana3/embedded/ssl/certs/server.key;

        ssl_session_timeout  5m;

        ssl_protocols  SSLv2 SSLv3 TLSv1;
        ssl_ciphers  HIGH:!aNULL:!MD5;
        ssl_prefer_server_ciphers   on;

    }

}
